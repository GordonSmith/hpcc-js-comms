{
    "name": "@hpcc-js/comms",
    "version": "0.0.23",
    "description": "hpcc-js-comms - HPCC Platform Comms Library",
    "main": "lib/comms.js",
    "module": "lib/index",
    "jsnext": "lib/index.js",
    "types": "lib/index.d.ts",
    "browser": "lib/comms-browser.js",
    "files": [
        "lib/**/*.d.ts",
        "lib/**/*.js"
    ],
    "directories": {
        "lib": "lib/"
    },
    "scripts": {
        "clean": "rimraf lib && rimraf tmp && rimraf coverage && rimraf .nyc_output",
        "compile": "tsc -p ./tsconfig.json",
        "compile-es6": "tsc -p ./tsconfig-es6.json",
        "compile-test": "tsc -p ./tsconfig-test.json",
        "bundle-node": "cross-env RUNTIME=node BUILD=src rollup -c",
        "bundle-node-min": "cross-env RUNTIME=node BUILD=src PACKAGE=min rollup -c",
        "bundle-node-test": "cross-env RUNTIME=node BUILD=test rollup -c",
        "bundle-browser": "cross-env RUNTIME=browser BUILD=src rollup -c",
        "bundle-browser-min": "cross-env RUNTIME=browser BUILD=src PACKAGE=min rollup -c",
        "build-node": "npm run bundle-node && npm run bundle-node-min",
        "build-browser": "npm run bundle-browser && npm run bundle-browser-min",
        "bundle-browser-test": "cross-env RUNTIME=browser BUILD=test rollup -c",
        "build": "npm run compile && npm run build-node && npm run build-browser",
        "build-test": "npm run compile && npm run bundle-node-test && npm run bundle-browser-test",
        "watch": "cross-env RUNTIME=browser BUILD=test rollup -w -c",
        "lint": "tslint ./src/**/*",
        "test": "mocha ./lib/comms-test.js",
        "prepublishXXX": "npm run clean && npm run build",
        "pretest": "npm run build-test",
        "coverage": "nyc --reporter=html npm test",
        "doc": "typedoc --out ./docx/ --tsconfig ./tsconfig.json --exclude node_modules --excludeNotExported --ignoreCompilerErrors src"
    },
    "dependencies": {
        "d3-request": "^1.0.5",
        "es6-promise": "^4.0.5",
        "request": "^2.81.0",
        "tslib": "^1.6.0",
        "xmldom": "^0.1.27"
    },
    "devDependencies": {
        "@types/chai": "^3.4.35",
        "@types/mocha": "^2.2.40",
        "chai": "^3.5.0",
        "cross-env": "^3.1.4",
        "mocha": "^3.2.0",
        "nyc": "^10.1.2",
        "rimraf": "^2.6.1",
        "rollup": "^0.41.5",
        "rollup-plugin-alias": "^1.2.1",
        "rollup-plugin-commonjs": "^8.0.2",
        "rollup-plugin-css-only": "^0.2.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-sourcemaps": "^0.4.1",
        "rollup-plugin-typescript2": "^0.3.0",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-watch": "^3.2.2",
        "tslint": "^4.4.2",
        "typedoc": "^0.5.7",
        "typescript": "^2.2.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hpcc-systems/hpcc-js-comms.git"
    },
    "author": "Gordon Smith <gordonjsmith@gmail.com>",
    "contributors": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/hpcc-systems/hpcc-js-comms/issues"
    },
    "homepage": "https://github.com/hpcc-systems/hpcc-js-comms"
}