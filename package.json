{
    "name": "hpcc-platform-comms",
    "version": "0.0.17",
    "description": "HPCC Platform Client Comms Library (TS/JS)",
    "keyword": [
        "HPCC",
        "ECL",
        "TypeScript",
        "JavaScript"
    ],
    "homepage": "",
    "license": "Apache-2.0",
    "author": "HPCC Systems",
    "browser": "dist/hpcc-platform-comms.min.js",
    "main": "dist/commonjs/index",
    "module": "dist/es6/index",
    "jsnext:main": "dist/es6/index.js",
    "types": "dist/src/index.d.ts",
    "scripts": {
        "tsc-es2015": "tsc -p .",
        "tsc-commonjs": "tsc -p ./tsconfig-commonjs.json",
        "tsc-test": "tsc -p ./test",
        "webpack": "webpack",
        "webpack-min": "cross-env NODE_ENV=min webpack --display-modules",
        "webpack-test": "cross-env NODE_ENV=test webpack ",
        "webpack-min-stats": "cross-env NODE_ENV=min webpack --json > stats.json",
        "webpack-min-debug": "cross-env NODE_ENV=min-debug webpack",
        "build": "npm run tsc-es2015 && npm run tsc-commonjs && npm run webpack && npm run webpack-min",
        "clean": "rimraf dist && rimraf docx",
        "prepublish": "npm run clean && npm run build && npm run doc",
        "watch": "cross-env NODE_ENV=watch webpack",
        "lint": "tslint ./src/**/*",
        "test": "mocha ./dist-test/test/index.js",
        "pretest": "npm run lint && npm run tsc-test",
        "doc": "typedoc --out ./docx/ --tsconfig ./tsconfig.json --exclude node_modules --excludeNotExported --ignoreCompilerErrors src"
    },
    "dependencies": {
        "es6-promise": "^4.0.5",
        "hash-sum": "^1.0.2",
        "tslib": "^1.6.0",
        "xhr": "^2.4.0"
    },
    "devDependencies": {
        "awesome-typescript-loader": "^3.0.7",
        "chai": "^3.5.0",
        "cross-env": "^3.1.4",
        "mocha": "^3.2.0",
        "request": "^2.79.0",
        "rimraf": "^2.6.1",
        "tslint": "^4.4.2",
        "typedoc": "^0.5.7",
        "typescript": "^2.2.1",
        "webpack": "^2.2.1",
        "webpack-node-externals": "^1.5.4",
        "xmldom": "^0.1.27"
    }
}
