{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "test-watch",
            "command": "tsc",
            "args": [
                "-w",
                "-p",
                "./test"
            ],
            "isShellCommand": true,
            "isBackground": true,
            "isBuildCommand": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "build-src",
            "command": "tsc",
            "args": [
                "-d",
                "-p",
                "."
            ],
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "sample",
            "command": "gulp",
            "args": [
                "build"
            ],
            "isShellCommand": true
        }
    ]
}