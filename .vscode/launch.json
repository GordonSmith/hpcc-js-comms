    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/lib/test/ESPConnection.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/lib/test"
        },
        {
            "name": "Launch rollup",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/rollup-default.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "name": "Debug with mocha",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "-u",
                "tdd",
                "--no-timeouts",
                "lib/test"
            ],
            "env": {
                "NODE_ENV": "testing"
            },
            "sourceMaps": true,
            "runtimeExecutable": null,
            "outDir": "${workspaceRoot}/lib/test"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}